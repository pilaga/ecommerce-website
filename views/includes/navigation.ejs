        <li class="mobile-nav_item"><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">My Cart</a></li>
        <li class="mobile-nav_item"><a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">My Orders</a></li>
        <li class="mobile-nav_item"><a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a></li>
        <li class="mobile-nav_item"><a class="<%= path === '/admin/product-store' ? 'active' : '' %>" href="/admin/product-store">Admin Products</a></li>
        <% } %>
