        <li class="mobile-nav_item"><a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a></li>
        <li class="mobile-nav_item"><a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a></li>
        <% } else { %>
        <li class="mobile-nav_item"><form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
